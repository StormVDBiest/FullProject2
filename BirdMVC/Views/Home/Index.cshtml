<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vision AI - Bird Recognition</title>
    <style>
    /* Global Styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Navbar Styles */
    .navbar {
      background-color: #333;
      overflow: hidden;
    }

    .navbar a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
      font-size: 17px;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    /* Landing Page Styles */
    .container {
      text-align: center;
    }

    .hero-image {
      width: 100%;
      height: auto;
    }

    .content {
      max-width: 800px;
      margin: 50px auto;
      padding: 0 20px;
    }

    h1 {
      color: #333;
    }

    p {
      color: #666;
    }

    .bird-img {
      width: 300px;
      height: 300px;
      margin-top: 50px;
      animation: rotate 5s linear infinite;
    }

    keyframes rotate {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }
    </style>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <a href="#">Home</a>
        <a href="#">About</a>
        <a href="#">Contact</a>
    </div>

    <!-- Landing Page Content -->
    <div class="container">
        <img src="https://via.placeholder.com/1920x1080" alt="Hero Image" class="hero-image">
        <div class="content">
            <h1>Vision AI - Bird Recognition</h1>
            <p>Identify birds with the power of Artificial Intelligence!</p>
            <img src="https://via.placeholder.com/600x400" alt="Bird Image" class="bird-img">
        </div>
    </div>

    <!-- JavaScript for Animation -->
    <script>
        window.onload = function () {
            animateBird();
        };

        function animateBird() {
            var birdImg = document.querySelector('.bird-img');
            birdImg.style.animation = 'rotate 5s linear infinite';
        }
    </script>
</body>
</html>
