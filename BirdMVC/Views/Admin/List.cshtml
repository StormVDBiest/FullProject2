@model BirdMVC.Models.AdminClass

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <title>Responsive Card Grid</title>

    <style>
        body {
            padding-top: 56px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            color: #fff;
            transition: 0.3s;
        }

            .sidebar a {
                padding: 15px 20px;
                text-decoration: none;
                font-size: 18px;
                color: #fff;
                display: block;
                transition: 0.2s;
            }

                .sidebar a:hover {
                    background-color: #555;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .card {
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
            max-width: 300px; /* Adjusted width */
        }

            .card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .card-img-top {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .list-group-item {
            border: none;
            padding: 5px 0;
            font-size: 0.9rem;
        }

        .btn {
            font-size: 0.9rem;
        }
    </style>



</head>

<body>
    <div class="sidebar">
        <a href="#" class="text-decoration-none text-white"><h2><i class="fas fa-cogs"></i> Admin Panel</h2></a>
        <ul class="list-unstyled">
            <li><a href="/admin/panel"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="/admin/list"><i class="fas fa-list"></i> List</a></li>
        </ul>
    </div>


    <div class="container mt-5">
        <div class="row">
            @foreach (var item in @Model.Results)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@item.Thumbnail.ImgURL" class="card-img-top" alt="Image 1">
                        <div class="card-body">
                            <h5 class="card-title">@item.Predictions[0].TagName</h5>
                            <ul class="list-group">
                                @foreach (var prediction in item.Predictions)
                                {
                                    <li class="list-group-item">@prediction.TagName: @prediction.Probability</li>
                                }
                            </ul>
                            <a href="/admin/details?guid=@item.GUID" class="btn btn-primary mt-2">Details</a>
                            <a href="/admin/delete?guid=@item.GUID"><button class="btn btn-danger mt-2 float-right">Delete</button></a>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
